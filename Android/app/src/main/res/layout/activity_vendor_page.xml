<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="indiepantry.firstindiepantry.VendorPageActivity">

    <TextView
        android:id="@+id/vendorPageNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vendorPageProfilePicture"
        android:layout_width="99dp"
        android:layout_height="81dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_rbmq4ipuhk"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/vendorPageNameBox"
        tools:layout_editor_absoluteY="112dp"
        tools:layout_editor_absoluteX="157dp"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/vendorPageDescriptionBox"
        android:layout_width="165dp"
        android:layout_height="25dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="240dp"
        tools:layout_editor_absoluteX="56dp" />

    <Button
        android:id="@+id/vendorPageRatingsButton"
        android:layout_width="74dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/vendorPageDescriptionBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vendorPageProfilePicture" />

    <Button
        android:id="@+id/vendorPageMenuButton"
        android:layout_width="66dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:text="Menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vendorPageDescriptionBox" />

</android.support.constraint.ConstraintLayout>
